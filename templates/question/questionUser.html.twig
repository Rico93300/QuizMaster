{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
<div class="container my-5">
	<h1 class="d-flex justify-content-center">Question index</h1>
            {% for question in questionFiltered %}
                
                <div>
                    {{ question.question }}
                    {{ question.img }}
                </div>
                <div>
                    {% for reponse in reponses %}
                        {% if question.id == reponse.idQuestion.id  %}
                            {{reponse.reponse}}
                        {% endif %}
                    {% endfor %}
                </div>        
            {% else %}
               <p>Aucune questions</p>
            {% endfor %}
</div>
{% endblock %}
