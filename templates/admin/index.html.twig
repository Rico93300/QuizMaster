{% extends 'base.html.twig' %}

{% block title %}admin quizz
{% endblock %}

{% block body %}

	<div class="container my-5">
		<h1 class="d-flex justify-content-center">Theme index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Theme</th>
					<th>Img</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for theme in themes %}
					<tr>
						<td>{{ theme.id }}</td>
						<td>
							<a href="{{ path('app_question_detail', {'id': theme.id}) }}">{{ theme.theme }}</a>
						</td>
						<td>
							<img src="{{asset('uploads/image/' ~ theme.img)}}" " style='height:100px'"></td>
						<td>
							<a href="{{ path('app_theme_edit', {'id': theme.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_theme_new') }}">Create new</a>
	</div>
	<div class="container my-5">
	<h1 class="d-flex justify-content-center">Question index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>theme</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.question }}</td>
                <td>{{ question.idtheme.theme }}</td>
                <td>{{ question.img }}</td>
                <td>
                    <a href="{{ path('app_question_show', {'id': question.id}) }}">show</a>
                    <a href="{{ path('app_question_edit', {'id': question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_question_new') }}">Create new</a>
</div>
<div class="container my-5">
	<h1 class="d-flex justify-content-center">Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reponse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.id }}</td>
                <td>{{ reponse.reponse }}</td>
                <td>
                    <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}">show</a>
                    <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}">Create new</a>
</div>
{% endblock %}
